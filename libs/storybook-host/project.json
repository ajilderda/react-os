{
  "name": "storybook-host",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/storybook-host/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/storybook-host/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["coverage/libs/storybook-host"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/storybook-host"
      }
    },
    "storybook": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/storybook-host/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/storybook-host",
        "configDir": "libs/storybook-host/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "all": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx storybook styles",
          "sleep 5 && nx storybook storybook-host"
        ],
        "parallel": true
      }
    }
  }
}
